<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jpery.dentalclinic.fragments.BudgetInformationFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textAppearance="@android:style/TextAppearance.Holo.Widget"
        android:textSize="24sp"
        android:id="@+id/arrangement_title"
        android:textAlignment="center"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/arrangement_date"
        android:padding="10sp"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_width="250dp"
        android:id="@+id/notifications_button"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        android:layout_marginBottom="104dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/notifications_button"
        android:layout_height="50dp" />

    <Button
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_dark"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/delete_button"
        android:text="@string/delete_button"
        app:layout_constraintTop_toBottomOf="@+id/notifications_button"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="TextView"
        android:id="@+id/arrangement_comment"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/arrangement_date"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="250dp"
        android:layout_width="300dp"
        android:textAlignment="center" />

</android.support.constraint.ConstraintLayout>
